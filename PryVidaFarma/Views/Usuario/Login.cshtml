@{
    ViewBag.Title = "Login";
}

<style>
    .body-login {
        background-color: #f4f7fa;
    }

    .login-container {
        background-color: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .login-container h2 {
            text-align: center;
            margin-bottom: 1rem;
        }

    .form-group {
        margin-bottom: 1rem;
    }

    input[type="email"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 1rem;
        border-radius: 4px;
        border: 1px solid #ddd;
    }

    .btnIniciarSesion  {
        width: 100%;
        padding: 10px;
        background-color: black;
        border: none;
        color: white;
        border-radius: 4px;
        font-size: 16px;
    }

    .btnIniciarSesion :hover {
            background-color: green;
        }

    .register-link {
        text-align: center;
        display: block;
        margin-top: 1rem;
    }

        .register-link a {
            text-decoration: none;
            color: #007bff;
        }

            .register-link a:hover {
                text-decoration: underline;
            }

    .error-message {
        color: red;
        font-size: 14px;
        text-align: center;
    }

</style>

<body class="body-login">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="row justify-content-center w-100">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="login-container">
                    <h2>Iniciar Sesión</h2>

                    <form method="post">
                        <div class="form-group">
                            <input type="email" name="correoElectronico" placeholder="Correo" required />
                        </div>
                        <div class="form-group">
                            <input type="password" name="contrasenia" placeholder="Contraseña" required />
                        </div>
                        <button class ="btnIniciarSesion"type="submit">Iniciar Sesión</button>
                    </form>

                    <div class="register-link">
                        <a href="@Url.Action("Register", "Usuario")">¿No tienes cuenta? Regístrate</a>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="error-message">
                            <p>@ViewBag.Error</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
