@using Newtonsoft.Json

@model List<PryVidaFarma.Models.TipoPago>

@{
    ViewBag.Title = "Seleccionar Tipo de Pago";

    // Deserialize the JSON from ViewBag
    var carrito = ViewBag.ProductosJson != null
        ? JsonConvert.DeserializeObject<List<PryVidaFarma.Models.ProductoCarrito>>(ViewBag.ProductosJson.ToString())
        : new List<PryVidaFarma.Models.ProductoCarrito>();

    decimal total = ViewBag.Total ?? 0;
    int idCliente = ViewBag.IdCliente ?? 0;
}

<div class="container mt-5">
    <h2 class="text-center text-success">Seleccionar Tipo de Pago</h2>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning text-center">
            <strong>@TempData["mensaje"]</strong>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <h4 class="text-center">Resumen del Carrito</h4>
            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Producto</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th>Importe</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in carrito)
                    {
                        <tr>
                            <td>@item.NombreProducto</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Precio.ToString("C")</td>
                            <td>@item.ImporteTotal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="alert alert-info text-center">
                <h5>Total General: <strong>@total.ToString("C")</strong></h5>
            </div>
        </div>

        <div class="col-md-6">
            <h4 class="text-center">Seleccionar Tipo de Pago</h4>

            <form asp-action="ConfirmarCompra" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="importeTotal" value="@total" />
                <input type="hidden" name="idCliente" value="@ViewBag.IdCliente" />
                <input type="hidden" name="productosJson" value='@ViewBag.ProductosJson' />

                <div class="form-group">
                    <label for="idTipoPago">Tipo de Pago</label>
                    <select name="idTipoPago" class="form-control" required>
                        <option value="">Seleccione un tipo de pago</option>
                        @foreach (var tipoPago in Model)
                        {
                            <option value="@tipoPago.IdTipoPago">@tipoPago.Descripcion</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-success w-100">Confirmar Compra</button>
            </form>
        </div>
    </div>
</div>