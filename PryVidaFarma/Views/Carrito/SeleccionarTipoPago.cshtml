@model IEnumerable<TipoPago>

@{
    ViewBag.Title = "Seleccionar Tipo de Pago";
}

<h2>Seleccionar Tipo de Pago</h2>

<form asp-action="ConfirmarCompra" method="post">
    <input type="hidden" name="idCliente" value="@ViewBag.IdCliente" />
    <div class="form-group">
        <label for="idTipoPago">Tipo de Pago</label>
        <select name="idTipoPago" class="form-control" required>
            @foreach (var tipo in Model)
            {
                <option value="@tipo.IdTipoPago">@tipo.Descripcion</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Confirmar Compra</button>
</form>

<h3>Resumen del Carrito</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Importe Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Carrito)
        {
            <tr>
                <td>@item.NombreProducto</td>
                <td>@item.Cantidad</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.ImporteTotal.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="alert alert-info">
    <h4>Total General: <strong>@ViewBag.Total.ToString("C")</strong></h4>
</div>