<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PryVidaFarma</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body class="bg-pearl-gray">
    <header>
        <div class="d-flex px-5 gap-4 align-items-center">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo-header.svg" class="img-fluid" alt="Logo" />
            </a>
            <select class="form-select flex-shrink-0" style="width: auto;" aria-label="Categorias">
                <option selected>Categorias</option>
                <option value="1">categoria 1</option>
                <option value="2">categoria 2</option>
                <option value="3">categoria 3</option>
            </select>
            <div class="d-flex flex-grow-1">
                <button type="button" class="btn btn-outline-secondary" data-mdb-ripple-init>Buscar</button>
                <input name="buscador" class="form-control" placeholder="Buscar Productos" />
            </div>
            <a href="#" class="d-flex align-items-center">
                <img src="~/img/cart.svg" alt="Carrito" />
            </a>
            <a href="#" class="d-flex align-items-center">
                <img src="~/img/account.svg" alt="Cuenta" />
            </a>
        </div>

        @* Por ahora se queda este nav por que es el unico medio para desplazarse por la pagina*@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PryVidaFarma</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="ListadoProductosPorCategoria">Listado por Categoria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="ListadoProductosPorPalabra">Listado por Palabra</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ListarProductos">ListarProductos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer mt-auto bg-dark text-light mt-5 px-5 pt-5">
        <div class="d-flex flex-column gap-3 justify-content-between">
            <div class="d-flex justify-content-around">
                <div>
                    <img src="~/img/logo-footer.png" />
                </div>
                <div>
                    <p class="text-24">
                        💊 Cuida tu salud con nosotros 🌿 <br />
                        Encuentra medicamentos, vitaminas <br />
                        y suplementos al mejor precio. <br />
                        ¡Tu bienestar es nuestra prioridad!🌟 🏥
                    </p>
                </div>
                <div>
                    <ul>
                        <li class="list-unstyled"><strong>CONTACTANOS</strong></li>
                        <li class="list-unstyled">Av. Siempre Viva #742</li>
                        <li class="list-unstyled">contactoVidaFarma@gmail.com</li>
                        <li class="list-unstyled">999-888-777</li>
                    </ul>
                </div>
                <div>
                    <img src="~/img/libro-reclamaciones.png" />
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-around align-items-center">
                <div>
                    <p class="mb-0">VidaFarma.co © 2024, Todos los derechos reservados</p>
                </div>
                <div class="d-flex gap-2">
                    <img class="img-fluid" src="~/img/visa.svg" alt="Visa" />
                    <img class="img-fluid" src="~/img/master-card.svg" alt="MasterCard" />
                    <img class="img-fluid" src="~/img/paypal.svg" alt="PayPal" />
                    <img class="img-fluid" src="~/img/apple-pay.svg" alt="Apple Pay" />
                    <img class="img-fluid" src="~/img/g-pay.svg" alt="Google Pay" />
                </div>
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>